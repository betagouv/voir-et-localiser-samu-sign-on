<nav>
    <% if (loggedInUser) { %>
    <ul>
        <li>Vous êtes connecté(e) en tant que <%= loggedInUser.firstName %> <%= loggedInUser.lastName %>.</li>
        <li>
            <form method="post" action="/logout">
                <button>Se déconnecter</button>
            </form>
        </li>
    </ul>
    <% } else { %>
    <ul>
        <li><form action="/"><button >Se connecter</button></form></li>
    </ul>
    <% } %>
</nav>

<style type="text/css">
    nav ul {
        list-style: none;
    }

    nav li {
        display: inline-block;
    }

    button.warning {
        color: orange;
    }
</style>
